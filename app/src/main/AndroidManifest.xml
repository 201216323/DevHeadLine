<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhl.devheadline">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".DevHeadLineApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.FeedbackActivity"
            android:label="@string/nav_feedback"
            android:theme="@style/AppTheme.NoActionBar.Activity" />
        <activity
            android:name=".ui.activity.SettingActivity"
            android:label="@string/nav_setting"
            android:theme="@style/AppTheme.NoActionBar.Activity" />
        <activity
            android:name=".ui.activity.NoteDetailsActivity"
            android:label="@string/act_notedetails"
            android:theme="@style/AppTheme.NoActionBar.Activity" />
        <activity
            android:name=".ui.activity.LaunchActivity"
            android:theme="@style/AppTheme.NoActionBar.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.BusinessCoopActivity"
            android:theme="@style/AppTheme.NoActionBar.Activity" />
    </application>

</manifest>